{
  "rules": {
    ".read": "auth != null",
    "rooms": {
      ".validate": true,
      "$room_id": {
        "$uid": {
          ".write": "auth != null && $uid === auth.uid"
        }
      }
    },
    "offers": {
      ".validate": true,
      "$uid": {
        ".write": "auth != null && $uid === auth.uid",
        "type": {
          ".validate": true
        },
        "sdp": {
          ".validate": true
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "candidates": {
      ".validate": true,
      "$uid": {
        "$candidate": {
          ".write": "auth != null && $uid === auth.uid"
        }
      }
    },
    "$other": {
      ".validate": false
    }
  }
}