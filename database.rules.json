{
  "rules": {
    ".read": "auth != null",
    "rooms": {
      ".validate": true,
      "$room_id": "auth != null",
      "users": {
        "$uid": {
          ".write": "$uid == auth.uid"
        }  
      }
    },
    "offers": {
      ".validate": true,
      "$uid": {
        ".write": "$uid == auth.uid",
        "type": { ".validate": true },
        "sdp": { ".validate": true },
        "$other": { ".validate": false }
      }
    },
    "candidates": {
      ".validate": true,
      "$uid": "$uid == auth.uid",
      "$candidate": {
        ".write": "$uid == auth.uid"
      }
    },
    "$other": { ".validate": false }
  }
}